@using MVC.Repositories.Models
@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>


<form asp-controller="Contato" asp-action="Alterar" method="post">
    
    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="inputNome" aria-describedby="emailHelp" placeholder="Nome do contato...">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Email do contato..." />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label for="celular" class="form-label">Telefone</label>
        <input type="text" asp-for="Celular" class="form-control" id="inputTelefone" placeholder="Numero do contato...">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" role="button" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>


